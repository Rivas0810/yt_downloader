{
  "manifest_version": 3,
  "name": "Descargador de YouTube",
  "version": "3.0",
  "description": "Inyecta un panel de descarga en las p√°ginas de video de YouTube.",
  "permissions": [
    "storage" 
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["ui.css"],
      "js": ["content.js"]
    }
  ]
}